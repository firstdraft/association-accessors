<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Terminating Indirect Associations

    <a data-toggle="collapse" href="#model_terminating_indirect_associations_new_form">
      Add indirect association
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @model.terminating_indirect_associations.each do |indirect_association| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to indirect_association.to_s, indirect_association_path(indirect_association) %>

        <%= link_to indirect_association, method: :delete, data: { confirm: "Do you really want to delete this indirect_association" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="model_terminating_indirect_associations_new_form">
        <%= render partial: "models/model_terminating_indirect_associations_new_form" %>
      </div>
    </div>

  </ul>
</div>
