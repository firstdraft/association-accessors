<div class="card mb-3">
  <h2 class="card-header h4">
    Model #<%= model.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Idea</dt>
      <dd><%= link_to model.idea, model.idea %></dd>

      <dt>Entered name</dt>
      <dd><%= model.name %></dd>

      <dt>Classified name</dt>
      <dd><%= model.class_name %></dd>

      <dt>Pluralized name</dt>
      <dd><%= model.plural_name %></dd>

      <dt>Singularized name</dt>
      <dd><%= model.singular_name %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back model, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_model_url(model), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to model, method: :delete, data: { confirm: "Do you really want to delete this model?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(model.updated_at) %> ago
  </div>
</div>
