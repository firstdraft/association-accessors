<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Direct Terminating Associations

    <%= link_to 'Add association', associations_path(association: { idea_id: @model.idea }), method: :post %>
  </div>

  <ul class="list-group list-group-flush">
    <% @model.direct_terminating_associations.each do |association| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to association.to_s, association_path(association) %>

        <%= link_to association, method: :delete, data: { confirm: "Do you really want to delete this association" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="model_direct_terminating_associations_new_form">
        <%= render partial: "models/model_direct_terminating_associations_new_form" %>
      </div>
    </div>

  </ul>
</div>
