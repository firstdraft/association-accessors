<%= search_form_for @q, :class => collapse_search_form, :id => "models_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :originating_associations_name_cont, "Association name contains" %>
    <%= f.text_field :originating_associations_name_cont, :class => "form-control", :placeholder => "Association name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :terminating_associations_name_cont, "Association name contains" %>
    <%= f.text_field :terminating_associations_name_cont, :class => "form-control", :placeholder => "Association name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :direct_originating_associations_name_cont, "Association name contains" %>
    <%= f.text_field :direct_originating_associations_name_cont, :class => "form-control", :placeholder => "Association name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :direct_terminating_associations_name_cont, "Association name contains" %>
    <%= f.text_field :direct_terminating_associations_name_cont, :class => "form-control", :placeholder => "Association name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :indirect_originating_associations_name_cont, "Association name contains" %>
    <%= f.text_field :indirect_originating_associations_name_cont, :class => "form-control", :placeholder => "Association name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :indirect_terminating_associations_name_cont, "Association name contains" %>
    <%= f.text_field :indirect_terminating_associations_name_cont, :class => "form-control", :placeholder => "Association name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :idea_name_cont, "Idea name contains" %>
    <%= f.text_field :idea_name_cont, :class => "form-control", :placeholder => "Idea name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :indirect_terminus_models_name_cont, "Model name contains" %>
    <%= f.text_field :indirect_terminus_models_name_cont, :class => "form-control", :placeholder => "Model name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :indirect_origin_models_name_cont, "Model name contains" %>
    <%= f.text_field :indirect_origin_models_name_cont, :class => "form-control", :placeholder => "Model name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :terminus_models_name_cont, "Model name contains" %>
    <%= f.text_field :terminus_models_name_cont, :class => "form-control", :placeholder => "Model name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :terminating_associations_name_cont, "Model name contains" %>
    <%= f.text_field :terminating_associations_name_cont, :class => "form-control", :placeholder => "Model name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/models" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

