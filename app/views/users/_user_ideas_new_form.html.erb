<%= form_with(model: @idea, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <%= f.submit "Create idea", class: "btn btn-block btn-outline-secondary" %>
<% end %>
