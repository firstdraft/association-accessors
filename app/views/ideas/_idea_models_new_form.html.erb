<%= form_with(model: @model, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <%= f.hidden_field :idea_id, value: @idea.id %>

  <%= f.submit "Create model", class: "btn btn-block btn-outline-secondary" %>
<% end %>
