<div class="card mb-3">
  <h2 class="card-header h4">
    <%= idea.name %>
  </h2>

  <div class="card-body">
    <dl class="mb-4">
      <dt class="mb-3">Let's build a new association accessor!</dt>
      <dd><%= button_to 'Start wizard', associations_path(association: { idea_id: @idea }), method: :post, class: "btn btn-block btn-outline-success" %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back idea, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @idea.user %>
          <%= link_to edit_idea_url(idea), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @idea.user %>
          <%= link_to idea, method: :delete, data: { confirm: "Do you really want to delete this idea?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(idea.updated_at) %> ago
  </div>
</div>
