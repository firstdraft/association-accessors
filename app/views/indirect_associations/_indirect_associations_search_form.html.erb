<%= search_form_for @q, :class => collapse_search_form, :id => "indirect_associations_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :through_association_type_cont, "Through association type contains" %>
    <%= f.text_field :through_association_type_cont, :class => "form-control", :placeholder => "Through association type contains" %>
  </div>

  <div class="form-group">
    <%= f.label :through_association_id, "Through association" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :through_association_id_gteq, :class => "form-control", :placeholder => "Through association greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :through_association_id_lteq, :class => "form-control", :placeholder => "Through association less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :source_association_type_cont, "Source association type contains" %>
    <%= f.text_field :source_association_type_cont, :class => "form-control", :placeholder => "Source association type contains" %>
  </div>

  <div class="form-group">
    <%= f.label :source_association_id, "Source association" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :source_association_id_gteq, :class => "form-control", :placeholder => "Source association greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :source_association_id_lteq, :class => "form-control", :placeholder => "Source association less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :origin_model_name_cont, "Model name contains" %>
    <%= f.text_field :origin_model_name_cont, :class => "form-control", :placeholder => "Model name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :terminus_model_name_cont, "Model name contains" %>
    <%= f.text_field :terminus_model_name_cont, :class => "form-control", :placeholder => "Model name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/indirect_associations" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#indirect_associations_filters">
  Show filters
</a>
